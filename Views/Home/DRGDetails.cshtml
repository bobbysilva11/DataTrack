@using DataTrack.Data
@model DataTrack.Models.ReviewDetailsModel
@{
    ViewBag.Title = "DRGDetails";
}
<br />
<div>
    <table style="width:100%">
        <thead>
            <tr style="background-color:lightgray; width:100%">
                @{
                    string name = Model.MemberName;
                    string number = Model.MemberNumber;
                    string dob = Model.MemberDOB;
                    string gen = Model.MemberGender;
                    if (gen == "F")
                    {
                        gen = "Female";
                    }
                    else
                    {
                        gen = "Male";
                    }

                    string age = Model.MemberCurrentAge;
                    string ssn = Model.MemberSSN;
                    string xxssn = string.Concat("XXX-XX-", ssn.Substring(ssn.Length - 4));
                    string phone = Model.MemberPhone;
                    string refId = Model.ReferenceID;
                    DateTime startDate = Model.StartDate;
                    string status = Model.Status;
                    string completeDate = Model.CompleteDate;
                    string reviewTiming = Model.ReviewTiming;


                }
                <td style="padding:1px; width:1%">@Html.Label(name)</td>
                <td style="padding:1px; width:8%"><span>ID : </span>@Html.Label(number)</td>
                <td style="padding:1px; width:14%"><span>Date of Birth : </span>@Html.Label(dob)</td>
                <td style="padding:1px; width:8%"><span>Gender : </span>@Html.Label(gen)</td>
                <td style="padding:1px; width:8%"><span>Current Age : </span>@Html.Label(age)</td>
                <td style="padding:1px; width:14%"><span>SSN : </span>@Html.Label(xxssn)</td>
                <td style="padding:1px; width:8%"><span>Phone# : </span>@Html.Label(phone)<br /></td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td style="padding:1px; width:20%"><br />@Html.Label("DRG", new { style = "font-size:20px" })</td>
            </tr>
            <tr>
                <td><span>Reference ID: </span>@Html.Label(refId)</td>
            </tr>
            <tr>
                <td><span>Start Date: </span>@Html.Label(startDate.ToString("MM/dd/yyyy"))</td>
            </tr>
            <tr>
                <td><span>Status: </span>@Html.Label(status)</td>
            </tr>
            <tr>
                <td><span>Complete Date: </span>@Html.Label(completeDate)</td>
            </tr>
            <tr>
                <td><span>Review Timing: </span>@Html.Label(reviewTiming)</td>
            </tr>
            <tr style="background-color:lightskyblue; line-height:18px; width:100%">
                <td style="text-align: center">@Html.Label("Original")</td>
                <td style="text-align: center">@Html.Label("Current")</td>
            </tr>
            <tr style="background-color:lightgray; line-height:18px; width:100%">
                <td style="text-align: center">@Html.Label("Diagnoses")</td>
                <td></td>
            </tr>
            @{
                if (Model.DiagnosisList.Count > 0)
                {
                    <tr>
                    </tr>
                }
            }

            <tr style="background-color:lightgray; line-height:18px; width:100%">
                <td style="text-align: center">@Html.Label("Procedures")</td>
                <td></td>
            </tr>
            @{
                if (Model.ProcedureList.Count > 0)
                {
                    foreach (Procedure p in Model.ProcedureList)
                    {
                        <tr>
                            <td style="text-align: center">@Html.Label(p.ProcedureCode)</td>
                            <td style="text-align: center">@Html.Label(p.ProcedureCode + " " + p.ProcedureDescription)</td>
                        </tr>
                    }

                }
            }
            <tr style="background-color:lightgray; line-height:18px; width:100%">
                <td style="text-align: center">@Html.Label("Discharge Disposition")</td>
                <td></td>
            </tr>
            @{
                if (Model.DischargeDisposition != null || Model.DischargeDisposition != "")
                {
                    <tr>
                    </tr>
                }
            }
            <tr style="background-color:lightgray; line-height:18px; width:100%">
                <td style="text-align: center">@Html.Label("Diagnosis Related Group")</td>
                <td></td>
            </tr>
            @{
                if (Model.OriginalDiagnosisRelatedGroupCode != null && Model.OriginalDiagnosisRelatedGroupCode != "")
                {
                        <tr>
                            <td style="text-align: center">@Html.Label(Model.OriginalDiagnosisRelatedGroupCode)</td>
                            <td style="text-align: center">@Html.Label(Model.CurrentDiagnosisRelatedGroupCode)  @Html.Label(Model.DiagnosisRelatedGroupDescription)</td>
                        </tr>
                }
            }
        </tbody>
    </table>
</div>


